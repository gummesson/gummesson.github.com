//
// ## Buttons
//

.button
  padding: pixels(base-spacing-unit / 2) pixels(base-spacing-unit)
  padding: (base-spacing-unit / 2) (base-spacing-unit)
  white-space: nowrap
  cursor: pointer
  font-weight: 600
  &,
  &:hover
    border-bottom: 1px solid transparent
  &:focus,
  &:active
    outline: none

.button--full
  display: block
  width: 100%

.button--brand
  background-color: base-brand-color

.button--twitter
  background-color: #00acee

.button--instagram
  background-color: #3f729b

.button--google-plus
  background-color: #dd4b39

.button--github
  background-color: #171515

.button--brand,
.button--twitter,
.button--instagram,
.button--google-plus,
.button--github
  color: base-background-color
